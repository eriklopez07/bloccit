<h1>New Ad</h1>

<div class="row">
  <div>
    <p>Create a new campaing.</p>
    <ul>
      <li>The content uploaded must be original.</li>
      <li>High level of quality.</li>
    </ul>
  </div>
</div>

<div class="col-md-8">
  <%= form_for @advertisement do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter the title of your ad" %>
  </div>

  <div class="form-group">
    <%= f.label :copy %>
    <%= f.text_field :copy, class: 'form-control', placeholder: "Enter the text of your ad here" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control', placeholder: "Enter the budget of your campaing" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
  <% end %>
</div>
