<h2><%= @sponsoredpost.title %></h2>

 <div class="row">
   <div class="col-md-8">
     <p><%= @sponsoredpost.body %></p>
   </div>
   <div class="col-md-4">
     <%= link_to "Edit", edit_post_path(@sponsoredpost), class: 'btn btn-success' %>
     <%= link_to "Delete Post", @sponsoredpost, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this sponsored post?'} %>
   </div>
 </div>
